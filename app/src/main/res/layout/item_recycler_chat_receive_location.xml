<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tvItemTimeChatReceiveLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_msg_system_time_bg"
        android:textColor="@android:color/white"
        android:padding="5dp"
        tools:text="10:30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/ivItemPortraitChatReceiveLocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/layoutItemChatReceiveLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivItemPortraitChatReceiveLocation"
            android:background="@drawable/chat_left_qp"
            android:minWidth="80dp"
            android:minHeight="50dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingStart="25dp"
            android:paddingEnd="5dp"
            android:layout_toEndOf="@+id/ivItemPortraitChatReceiveLocation"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tvItemLocationChatReceiveLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher_background"
                android:gravity="center_horizontal|bottom"
                android:textColor="@android:color/white"
                tools:text="location"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressItemLoadChanReceiveLocation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layoutItemChatReceiveLocation"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_toEndOf="@+id/layoutItemChatReceiveLocation"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

</LinearLayout>