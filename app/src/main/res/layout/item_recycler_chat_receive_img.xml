<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvItemTimeChatReceiveImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_msg_system_time_bg"
        android:textColor="@android:color/white"
        android:padding="5dp"
        tools:text="09:30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/ivItemPortraitChatReceiveImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/tvItemContentChatReceiveImg"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_left_qp"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:minHeight="120dp"
            android:layout_toRightOf="@+id/ivItemPortraitChatReceiveImg"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ivItemPortraitChatReceiveImg"
            android:paddingEnd="5dp"
            android:paddingStart="25dp"
            tools:src="@mipmap/ic_launcher"/>

        <ProgressBar
            android:id="@+id/progressItemLoadChanReceiveImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvItemContentChatReceiveImg"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tvItemContentChatReceiveImg"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

</LinearLayout>